---
import BaseLayout from "./base-layout.astro";
---

<BaseLayout>
    <div class="absolute top-[-75px] left-0 w-[500px] max-w-full z-30">
        <svg viewBox="0 0 500 300" class="fill-slsk-aqua opacity-20">
            <circle cx="50" cy="80" r="130" />
            <circle cx="175" cy="90" r="100" />
            <circle cx="275" cy="60" r="75" />
        </svg>
    </div>

    <div id="background" aria-hidden="true" class="fixed top-0 left-0 w-full h-24 bg-slsk-white z-20" />

    <header class="fixed w-full flex flex-row justify-between xl:grid grid-cols-[1fr_2fr_1fr] pl-3 pr-7 py-4 z-40">
        <figure class="flex flex-row items-center">
            <a aria-label="Modrý oblak" href="/">
                <img src="/zbor-slsk.png" alt="" class="h-[4.5rem]" />
            </a>
        </figure>
        
        <nav class="hidden xl:flex flex-row items-center justify-center">
            <ul class="flex flex-row gap-10 items-center text-md text-slsk-aqua font-semibold hover:[&_a]:underline">
                <li><a href="/o-nas">O nás</a></li>
                <li><a href="/clen">Pre členov</a></li>
                <li><a href="/akcie">Akcie</a></li>
                <li><a href="/klubovna">Klubovňa</a></li>
                <li><a href="/kontakt">Kontakt</a></li>
            </ul>
        </nav>

        <figure class="flex flex-row gap-5 items-center justify-end">
            <a href="/pridaj-sa" class="hidden sm:block button">
                Pridaj sa k nám!
            </a>
            <span class="material-symbols-rounded scale-[1.2] text-slsk-aqua cursor-pointer hover:text-slsk-blue">
                search
            </span>
            <a aria-label="Instagram" href="/https://instagram.com/modryoblak" target="blank" class="hidden xl:block">
                <i class="fa-brands fa-instagram scale-[1.7] text-slsk-aqua hover:text-slsk-blue"></i>
            </a>
            <a aria-label="Facebook" href="/https://facebook.com/ModryOblak" target="_blank" class="hidden xl:block">
                <i class="pl-[0.22rem] fa-brands fa-facebook scale-[1.65] text-slsk-aqua hover:text-slsk-blue"></i>
            </a>
            <button class="pl-2 xl:hidden">
                <i class="fa-solid fa-bars scale-[1.7] text-slsk-aqua hover:text-slsk-blue"></i>
            </button>
        </figure>
    </header>

    <div class="hidden md:block absolute top-[-75px] right-0 w-[600px] max-w-full z-30">
        <svg viewBox="0 0 550 300" class="fill-slsk-aqua opacity-20">
            <circle cx="260" cy="60" r="50" />
            <circle cx="330" cy="85" r="90" />
            <circle cx="410" cy="100" r="100" />
            <circle cx="500" cy="90" r="100" />
        </svg>
    </div>

    <main class="px-[3vw] text-center sm:px-[20vw] sm:text-left lg:px-[30vw] py-44">
        <slot />
    </main>
</BaseLayout>
